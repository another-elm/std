{
	"devDependencies": {
		"prettier": "2",
		"xo": "0.30"
	},
	"xo": {
		"prettier": true,
		"space": true,
		"ignores": [
			"browser/**",
			"json/**",
			"test/**"
		],
		"rules": {
			"no-unused-vars": "off",
			"camelcase": "off",
			"unicorn/filename-case": "off",
			"unicorn/no-abusive-eslint-disable": "warn",
			"new-cap": "off",
			"capitalized-comments": "off",
			"no-new-object": "off",
			"no-undef": [
				"error",
				{
					"typeof": false
				}
			]
		}
	},
	"prettier": {
		"printWidth": 100,
		"useTabs": false,
		"trailingComma": "es5",
		"singleQuote": false,
		"bracketSpacing": true
	}
}
